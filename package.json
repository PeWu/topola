    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "browser-sync": "^3.0.3",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.0",
    "gh-pages": "^6.3.0",
    "jest": "^29.7.0",
    "jsdom": "^25.0.1",
